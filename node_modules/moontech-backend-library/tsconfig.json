{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@moontech-industry/moontech-backend-library": [
        "libs/moontech-backend-library/src",
        "moontech-backend-library/src",
      ],
      "@moontech-industry/moontech-backend-library/*": [
        "libs/moontech-backend-library/src/*",
        "moontech-backend-library/src/*"
      ]
    }
  }
}